{% extends "layout.njk" %} 

{% block head %}
  <title>Conteúdos</title>
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet">
{% endblock %}

{% block content %}

  <div id="wrapper">
    <h1>Conteúdos</h1>
  </div>

  <section class="cards">

    <div class="card" id="dark-mode-com-css-mudando-a-aparencia-do-blog-de-maneira-simples-e-rapida">
      <div class="card__image-container">
        <img src="https://blog.rocketseat.com.br/content/images/2020/10/dark-mode-com-css-mudando-a-aparencia-do-blog-de-maneira-simples-e-rapida.jpg" alt="Dark Mode com CSS — mudando a aparência do Blog de maneira simples e rápida">
      </div>
      <div class="card__content">
        <p>Dark Mode com CSS — mudando a aparência do Blog de maneira simples e rápida</p>
      </div>
      <div class="card__info">
        <p>3 min</p>
        <p class="card__author">por Thiago Marinho</p>
      </div>
    </div>

    <div class="card" id="upload-de-imagens-no-front-end-com-react-js-e-context-api-3">
      <div class="card__image-container">
        <img src="https://blog.rocketseat.com.br/content/images/2020/10/blog-rocketseat-upload-de-imagens-no-front-end-com-react-js-e-context-api.png" alt="Upload de imagens no Front End com ReactJS e Context API">
      </div>
      <div class="card__content">
        <p>Upload de imagens no Front End com ReactJS e Context API</p>
      </div>
      <div class="card__info">
        <p>17 min</p>
        <p class="card__author">por Thiago Marinho</p>
      </div>
    </div>

    <div class="card" id="substituindo-a-instrucao-switch-por-object-literal">
      <div class="card__image-container">
        <img src="https://blog.rocketseat.com.br/content/images/2020/09/substituindo-a-instrucao-switch-por-object-literal-rocketseat-1.png" alt="Substituindo a instrução switch por Object Literal">
      </div>
      <div class="card__content">
        <p>Substituindo a instrução switch por Object Literal</p>
      </div>
      <div class="card__info">
        <p>2 min</p>
        <p class="card__author">por Thiago Marinho</p>
      </div>
    </div>

  </section>

  <div class="modal-overlay">
    <div class="modal">
      <a class="close-modal">
        <i class="material-icons">close</i>
      </a>
      <div class="modal-content">
        <iframe src="" frameborder="0"></iframe>
      </div>
    </div>
  </div>

  <script src="scripts.js"></script>
  
{% endblock %}
